{
  "$schema": "https://imgs.search.brave.com/VSmf_ooqM36GvFZO-fbxJRL8_hDaiqLf6V7NzMeqKJc/rs:fit:860:0:0:0/g:ce/aHR0cHM6Ly9yb2Jv/dGljcy5iZW5lZGV0/dGVsbGkuY29tL3dw/LWNvbnRlbnQvdXBs/b2Fkcy8yMDEzLzA5/L0pvaG5OWFRfbWFp/bi5qcGc",
  "name": "NXC",
  "scopeName": "source.nxc",
  "patterns": [
    {"include": "#comments"},
    {"include": "#preprocessor"},
    {"include": "#strings"},
    {"include": "#numbers"},
    {"include": "#keywords"},
    {"include": "#storage"},
    {"include": "#constants"},
    {"include": "#builtins"}
  ],
  "repository": {
    "comments": {
      "patterns": [
        {"name": "comment.line.double-slash.nxc", "match": "//.*$"},
        {"name": "comment.block.nxc", "begin": "/\\*", "end": "\\*/"}
      ]
    },
    "preprocessor": {
      "patterns": [
        {"name": "meta.preprocessor.definition.nxc", "match": "^\\s*#\\s*(define|undef|include|ifdef|ifndef|if|else|elif|endif)\\b.*$"}
      ]
    },
    "strings": {
      "patterns": [
        {"name": "string.quoted.double.nxc", "begin": "\"", "end": "\"", "patterns": [{"name": "constant.character.escape.nxc", "match": "\\\\."}]}
      ]
    },
    "numbers": {
      "patterns": [
        {"name": "constant.numeric.hex.nxc", "match": "0[xX][0-9A-Fa-f]+"},
        {"name": "constant.numeric.float.nxc", "match": "(?x)\\b((([0-9]+\\.[0-9]*)|([0-9]*\\.[0-9]+))([eE][+-]?[0-9]+)?)|([0-9]+[eE][+-]?[0-9]+)\\b"},
        {"name": "constant.numeric.decimal.nxc", "match": "\\b[0-9]+\\b"}
      ]
    },
    "keywords": {
      "patterns": [
        {"name": "keyword.control.nxc", "match": "\\b(task|repeat|for|while|do|if|else|return|break|continue|switch|case|default)\\b"}
      ]
    },
    "storage": {
      "patterns": [
        {"name": "storage.type.nxc", "match": "\\b(bool|byte|char|int|long|short|string|float|unsigned|signed|void)\\b"},
        {"name": "storage.modifier.nxc", "match": "\\b(const|inline|volatile|static)\\b"}
      ]
    },
    "constants": {
      "patterns": [
        {"name": "constant.language.nxc", "match": "\\b(TRUE|FALSE|NULL)\\b"},
        {"name": "constant.other.outputs.nxc", "match": "\\b(OUT_A|OUT_B|OUT_C|OUT_AB|OUT_AC|OUT_BC|OUT_ABC|OUT_ALL)\\b"},
        {"name": "constant.other.inputs.nxc", "match": "\\b(IN_1|IN_2|IN_3|IN_4)\\b"}
      ]
    },
    "builtins": {
      "patterns": [
        {"name": "support.function.motor.nxc", "match": "\\b(OnFwd|OnRev|OnFwdReg|OnRevReg|Off|Coast|Float|RotateMotor|RotateMotorEx|RotateMotorPID|RotateMotorPIDEx)\\b"},
        {"name": "support.function.timing.nxc", "match": "\\b(Wait|CurrentTick|ResetTimer|ClearTimer)\\b"},
        {"name": "support.function.sound.nxc", "match": "\\b(PlayTone|PlayFile|PlayFileEx|SetSoundVolume|MuteSound)\\b"},
        {"name": "support.function.sensor.nxc", "match": "\\b(Sensor|SensorValue|SetSensorType|SetSensorMode|ReadSensor|ClearSensor)\\b"},
        {"name": "support.function.display.nxc", "match": "\\b(TextOut|NumOut|ClearScreen|RectOut|CircleOut|LineOut|PointOut)\\b"},
        {"name": "support.function.task.nxc", "match": "\\b(StartTask|StopTask|StopAllTasks|Precedes|Follows|Priority|Yield)\\b"}
      ]
    }
  },
  "fileTypes": ["nxc"],
  "uuid": "a4e5c9c0-0000-4d3a-9c6e-nxc-syntax-000001"
}
